@model IEnumerable<UserOrgManagementSystem.Models.Organization>

@{
    ViewData["Title"] = "Organizations";
}

<h1>Organizations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var organization in Model)
        {
            <tr>
                <td>@organization.Name</td>
                <td>@organization.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@organization.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@organization.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@organization.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Organization</a>
